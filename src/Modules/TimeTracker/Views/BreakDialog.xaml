<UserControl x:Class="TimeWorkRecorder.Modules.TimeTracker.Views.BreakDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             MinWidth="300" MinHeight="150">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Wybierz typ przerwy:" FontWeight="Bold" />

        <ComboBox Grid.Row="1" Margin="0,8,0,8"
                  SelectedValue="{Binding SelectedReason, Mode=TwoWay}"
                  SelectedValuePath="Content">
            <ComboBoxItem Content="Sniadanie"/>
            <ComboBoxItem Content="Spotkanie"/>
            <ComboBoxItem Content="Prywatny"/>
            <ComboBoxItem Content="JiraTask"/>
        </ComboBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="4" Command="{Binding OkCommand}"/>
            <Button Content="Cancel" Width="80" Margin="4" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
